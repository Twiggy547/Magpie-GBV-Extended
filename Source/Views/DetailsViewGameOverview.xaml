                                                                <Setter Property="Visibility" Value="{DynamicResource ReviewViewerVisibility}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <Grid Visibility="{PluginStatus Plugin=Review_Viewer_ca24e37a-76d9-49bf-89ab-d3cba4a54bd1, Status=Installed}" HorizontalAlignment="Stretch" Margin="0,0,0,20" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Separator Margin="0" Background="{DynamicResource HoverBrush}" Grid.Column="0" />
                                                    <Label Grid.Column="1" Margin="0,0,0,0" MaxHeight="20" />
                                                    <TextBlock Text="Reviews"  Margin="10,0,10,0"
                                                                       Grid.Column="1" Foreground="{DynamicResource TextBrush}"
                                                                       FontSize="{DynamicResource FontSizeLarger}" FontFamily="{DynamicResource FontFamily}"
                                                                       Typography.Capitals="SmallCaps" FontWeight="SemiBold"  />
                                                    <Separator Margin="0,0,0,0" Background="{DynamicResource HoverBrush}" Grid.Column="3"/>
                                                </Grid>
                                                <ContentControl x:Name="ReviewViewer_ReviewsControl" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </DockPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="DataContext" Value="{x:Null}">
                <Setter Property="Visibility" Value="Collapsed" />
