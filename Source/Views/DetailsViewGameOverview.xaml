                                                <TextBlock Text="{DynamicResource LOCCommonLinksAchievements}"  Margin="20,0,10,0"
                                                                       Grid.Column="1" Foreground="{DynamicResource TextBrush}"
                                                                       FontSize="{DynamicResource FontSizeLarger}" FontFamily="{DynamicResource FontFamily}"
                                                                       Typography.Capitals="SmallCaps" FontWeight="SemiBold"  />
                                                <Separator Margin="5,0,0,0" Background="{DynamicResource HoverBrush}" Grid.Column="2"/>
                                            </Grid>
                                            <ContentControl x:Name="SuccessStory_PluginChart" />
                                            <ContentControl x:Name="SuccessStory_PluginProgressBar" />
                                            <ContentControl x:Name="SuccessStory_PluginCompactList" />
