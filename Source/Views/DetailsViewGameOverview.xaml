                                                <Style>
                                                    <Setter Property="UIElement.Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="{x:Null}">
                                                            <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="False">
                                                            <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <Grid Visibility="{PluginSettings Plugin=SuccessStory, Path=HasData}" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Separator Margin="0,0,10,0" Background="{DynamicResource HoverBrush}" Grid.Column="0" />
